{
  "name": "jtb-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm install && concurrently --raw \"next dev\" \"bun run --silent test:watch\" \"bun run --silent lint:watch\"",
    "test": "bun test --passWithNoTests",
    "test:watch": "bun test --watch --passWithNoTests",
    "lint": "echo 'Linting...' && bun run --silent lint:tsc && bun run --silent lint:eslint && printf \"\\033[1;32m✔ Linting complete — no errors found.\\033[0m\\n\" || exit 1",
    "lint:watch": "nodemon -q --watch src --ext js,ts,jsx,tsx --exec \"bun run --silent lint\"",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "build": "next build",
    "start": "next start",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "node .husky/pre-commit"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.{css,scss,sass}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query": "^5.90.5",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "next": "16.0.0",
    "postcss": "^8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.65.0",
    "react-i18next": "^16.1.6",
    "sass": "^1.93.2",
    "tailwindcss": "^4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@happy-dom/global-registrator": "^20.0.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-type-assertion": "^1.3.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.2"
  }
}
